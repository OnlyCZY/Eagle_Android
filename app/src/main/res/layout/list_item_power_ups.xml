<?xml version="1.0" encoding="utf-8"?>
<!--item: UPS系统,配电系统-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:background="@drawable/list_item_bg">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/list_item_power_ups_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:contentDescription="配电_UPS"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="19dp">

            <TextView
                android:id="@+id/list_item_power_ups_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_tiny"/>
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/list_item_power_ups_av"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="75%"
                    android:textColor="@color/white"
                    android:background="@drawable/green_percent"
                    android:textSize="@dimen/text_tiny" />
            </FrameLayout>
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/list_item_power_ups_bv"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="75%"
                    android:textColor="@color/white"
                    android:background="@drawable/green_percent"
                    android:textSize="@dimen/text_tiny" />
            </FrameLayout>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_tiny"
                android:text="A相电压"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_tiny"
                android:text="B相电压"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/list_item_power_ups_cv"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="75%"
                    android:textColor="@color/white"
                    android:background="@drawable/green_percent"
                    android:textSize="@dimen/text_tiny" />
            </FrameLayout>
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/list_item_power_ups_a"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="75%"
                    android:textColor="@color/white"
                    android:background="@drawable/green_percent"
                    android:textSize="@dimen/text_tiny" />
            </FrameLayout>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_tiny"
                android:text="C相电压"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_tiny"
                android:text="频率"/>
        </TableRow>

    </TableLayout>

    <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="{fa-angle-right}"
        android:textSize="20sp"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:maxLines="1"
        android:singleLine="true"/>

</LinearLayout>
