<?xml version="1.0" encoding="utf-8"?>
<!--body-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/loginWindowColor"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/loginPaddingLeft"
    android:paddingRight="@dimen/loginPaddingRight"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.buoyantec.eagle_android.ui.activity.forgotPasswordActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/network_error"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/network_error_bg"
        android:visibility="gone"
        android:textColor="@color/normal_text"
        android:gravity="center"
        android:text="@string/network_error"/>
    <ImageView
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/login_logo"/>

    <ScrollView
        android:id="@+id/update_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="手机号码"
                android:inputType="phone"
                android:maxLines="1"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/sms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/login_edit_text_bg"
                    android:hint="验证码"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"/>
                <Button
                    android:id="@+id/get_sms_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="80sp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/login_btn_bg"
                    android:text="点击获取"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="新密码"
                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="密码确认"
                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"/>
            <Button
                android:id="@+id/update_password_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/login_btn_bg"
                android:text="修改密码"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>







