<?xml version="1.0" encoding="utf-8"?>
<!--item: 系统状态->子系统->设备信息列表-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/device_detail_list_item"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/stripListViewGrayColor"
    android:paddingLeft="36dp"
    android:paddingRight="36dp"
    android:layout_width="match_parent"
    android:layout_height="30dp">

    <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:text="{fa-circle}"
        android:textSize="10sp"
        android:textColor="@color/list_dot_green"/>

    <TextView
        android:id="@+id/list_item_device_detail_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="30dp"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:ellipsize="end" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="right"
        android:singleLine="true"
        android:id="@+id/list_item_device_detail_status"/>

</LinearLayout>