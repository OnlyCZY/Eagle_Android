<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <!--首页轮播-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context="com.daimajia.slider.demo.MainActivity">
        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/SliderImageColor"/>
        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:id="@+id/custom_indicator"
            android:layout_width="wrap_content"
            android:layout_height="6dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            app:selected_color="#000000"
            app:unselected_color="#55555555"
            app:shape="oval"
            app:selected_padding_left="3dp"
            app:selected_padding_right="3dp"
            app:unselected_padding_left="3dp"
            app:unselected_padding_right="3dp"
            app:selected_width="6dp"
            app:selected_height="6dp"
            app:unselected_width="6dp"
            app:unselected_height="6dp"/>

    </RelativeLayout>

    <!--GridView布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp"
            android:numColumns="3"
            android:gravity="center"
            android:background="@color/gridBackgroundColor"
            android:scrollbars="none"
            android:clickable="true">
        </GridView>
    </LinearLayout>
</LinearLayout>
