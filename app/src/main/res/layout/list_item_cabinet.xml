<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cabinet_listView_item"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/stripListViewGrayColor"
    android:paddingLeft="48dp"
    android:layout_width="match_parent"
    android:layout_height="30dp">

    <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:text="{fa-circle}"
        android:textSize="10sp"
        android:textColor="@color/list_dot_green"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/list_item_cabinet_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/list_item_cabinet_temperature"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/list_item_cabinet_humidity"/>
</LinearLayout>
