<?xml version="1.0" encoding="utf-8"?>
<!--item: 设备告警详情 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="24dp"
    android:paddingBottom="10dp"
    android:paddingRight="24dp"
    android:orientation="horizontal"
    android:background="@color/white">

    <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="#EAAD40"
        android:text="{fa-exclamation}"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/warn_detail_name"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            android:text="name"
            />

        <TextView
            android:id="@+id/warn_detail_status"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            android:text="name"
            />

        <TextView
            android:id="@+id/warn_detail_type"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            android:text="越上线"/>

        <TextView
            android:id="@+id/warn_detail_alarm"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/warn_detail_time"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:text="1992-05-03"/>
    </LinearLayout>

    <!--<Button-->
        <!--android:id="@+id/warn_detail_confirm"-->
        <!--android:layout_width="44dp"-->
        <!--android:layout_height="28dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:textColor="@color/white"-->
        <!--android:background="@drawable/warn_detail_btn_bg"-->
        <!--android:visibility="invisible"-->
        <!--android:text="确认"/>-->

</LinearLayout>
